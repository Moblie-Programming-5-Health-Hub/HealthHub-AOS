<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_item_workout">

    <ImageView
        android:id="@+id/iv_workout"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/workout2" />


    <TextView
        android:id="@+id/tv_workout_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingVertical="30dp"
        android:textAppearance="@style/TextAppearance.Title2"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/iv_workout"
        tools:text="팔굽혀펴기 10회" />


</androidx.constraintlayout.widget.ConstraintLayout>